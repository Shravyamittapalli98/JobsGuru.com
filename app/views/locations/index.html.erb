}
nav ul{
  float: right;
}
nav ul li{
  list-style: none;
}
nav ul li a{
  color:#fff;
  text-decoration: none;
  font-size: 13px;
  text-transform: uppercase;
  padding:0px 32px;
}
nav ul li a:hover{
  color:#c0d96f;
}
nav ul li .active{
  color:#c0d96f;
}
table ,td,th{
  border: 2px solid black;
}
table{
  border-collapse: collapse;
  width: 100%;
  margin-left: 50px;
  margin-right: 100px;
  margin-top: 80px;

}
th, td{
  text-align: left;
}
#bg{
    background-image: url('/bg.jpeg');
    background-size: cover;
    background-repeat: no-repeat;
}
button{
  height: 20px;
}
a{
  color: white ;
}
h1{
  margin-left: 60px;
}
</style>
